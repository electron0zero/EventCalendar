<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sponsor_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/sponsors_image"
        android:layout_width="100sp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_info_outline_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sponsors_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Sponsor Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sponsors_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Sponsor Type"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sponsors_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:singleLine="true"
            android:text="Sponsor URL"
            android:textColorLink="@color/colorAccent"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
