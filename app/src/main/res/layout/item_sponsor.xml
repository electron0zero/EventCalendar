<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sponsor_item"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sponsors_image"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_info_outline_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sponsors_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="34sp"
                android:text="Sponsor Name" />

            <TextView
                android:id="@+id/sponsors_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="24sp"
                android:text="Sponsor Type" />

            <TextView
                android:id="@+id/sponsors_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="24sp"
                android:text="Sponsor URL" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>