<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_head_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_head_poster_height"
        android:contentDescription="@string/poster_of_event"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:weightSum="1">

        <ImageView
            android:id="@+id/nav_head_icon"
            android:layout_width="@dimen/nav_head_icon_width"
            android:layout_height="@dimen/nav_head_icon_height"
            android:contentDescription="@string/event_icon"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:background="@color/white"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/nav_head_EventName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_head_event_name_height"
            android:textColor="@color/white"
            android:background="@color/black"
            android:padding="@dimen/padding"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_regular" />
    </LinearLayout>

</FrameLayout>

